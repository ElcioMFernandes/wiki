{
  // ==================== EXPLORER & UI ====================
  "explorer.sortOrder": "type", // Pastas primeiro, depois arquivos
  "explorer.sortOrderLexicographicOptions": "upper",
  "explorer.compactFolders": false, // Deixa as setinhas bonitinhas
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    // Next.js App Router (o mais importante!)
    "page.tsx": "page.*, loading.*, error.*, not-found.*, route.*, layout.*, template.*",
    "layout.tsx": "layout.*, template.*, loading.*, error.*, not-found.*",
    "loading.tsx": "loading.*, error.*, not-found.*",
    "error.tsx": "error.*, not-found.*",
    "route.ts": "route.*, page.*, layout.*",

    // Arquivos comuns do Next.js
    "next.config.ts": "next-env.d.ts, next.config.*, tsconfig.json, jsconfig.json",
    "middleware.ts": "middleware.*",
    "tailwind.config.ts": "tailwind.config.*, postcss.config.*, cssnano.config.*",
    "postcss.config.ts": "postcss.config.*, tailwind.config.*",

    // Prisma (super útil!)
    "schema.prisma": "generated/*, prisma/*.ts, prisma/*.js, .env, .env.local",

    // Supabase
    "supabase.ts": ".env.local, .env, supabase/*",
    "supabase.config.ts": "supabase/*",

    // Arquivos de teste e histórias
    "*.test.ts": "*.test.tsx, *.spec.ts, *.spec.tsx",
    "*.test.tsx": "*.test.ts, *.spec.ts, *.spec.tsx",
    "*.stories.tsx": "*.stories.ts, *.story.tsx, *.story.ts",

    // Padrões gerais
    "package.json": "pnpm-lock.yaml, yarn.lock, package-lock.json, .npmrc, .yarnrc, .pnpmrc",
    ".env": ".env.*, .env.local, .env.example",
    "README.md": "LICENSE, CHANGELOG.md, CONTRIBUTING.md, TODO.md"
  },

  // ==================== EDITOR & FORMATTING ====================
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },

  // ==================== TYPESCRIPT & NEXT.JS ====================
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,

  // ==================== SEARCH & EXCLUDE ====================
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/dist": true,
    "**/build": true,
    "**/coverage": true,
    "prisma/generated": true // Não indexa o client gerado (economiza RAM)
  },
  "files.exclude": {
    "**/.git": true,
    "**/.next": true,
    "**/.DS_Store": true,
    "**/node_modules": true
  },

  // ==================== PRISMA ====================
  "prisma.showGenerateNotification": false, // Evita popup chato toda hora

  // ==================== TAILWIND (se estiver usando) ====================
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  },

  // ==================== OUTROS ====================
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "emmet.includeLanguages": {
    "typescriptreact": "html"
  },
  "workbench.iconTheme": "chalice-icon-theme", // opcional, mas fica lindo
  "workbench.colorTheme": "Min Dark" // ou o que você preferir
}
